<%- include("template/header.ejs", {webtitle: 'Pagina de Mascotas'}) %>

<div class="container">

    <h1>CRUD Mongo</h1>

    <a
        class="btn btn-success btn-block my-4"
        href="/mascotas/crear"
    >
        Crear nueva Mascota
    </a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            <% if (arrayPets.length > 0) { %>
                <% arrayPets.forEach(pet => { %>
                    <tr>
                        <th scope="row"><%= pet.id %></th>
                        <td><%= pet.name %></td>
                        <td><%= pet.description %></td>
                        <td>
                            <a
                            href="mascotas/<%= pet.id %> "
                            class="btn btn-warning btn-sm"
                            >
                                Editar
                            </a>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>


</div>

<%- include("template/footer") %>